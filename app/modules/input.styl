.jtask_input
  .task-text
    position relative
  .placeholder
    opacity .4
  .cursor
    height 1.5rem
    width 1px
    background-color #343858
    position absolute
    top 0rem
    left .5rem
    display none
    &.show
      display block
    &.blink
      animation blink
      animation-iteration-count infinite
      animation-duration 1s
      animation-timing-function ease //steps(2, start)
@keyframes blink
  0%
    opacity 1
  50%
    opacity 0
  100%
    opacity 1
